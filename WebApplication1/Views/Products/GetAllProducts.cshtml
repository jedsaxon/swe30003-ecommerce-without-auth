@model WebApplication1.ViewModel.ProductsViewModel

@{
    ViewBag.Title = "All Products";
    Layout = "_Layout";
}

<div class="d-flex justify-content-center flex-column">
    <div class="text-center mt-4 mb-3">
        <h2>Products</h2>
    </div>
    <div class="mx-auto" style="max-width: 50rem;">
        @foreach (var p in Model.Products)
        {
            <div class="card mb-3 @(p.Listed ? "" : "text-bg-danger")" id="@p.Name">
                <div class="card-body">
                    <h5 class="card-title">@(p.Listed ? "" : "[UNLISTED] ") @p.Name</h5>
                    <h6 class="card-subtitle mb-2 @(p.Listed ? "text-muted " : "")">$@p.Price</h6>
                    <p class="card-text">@p.ShortDescription</p>
                    @if (p.Listed)
                    {
                        <div class="btn-group w-100 mb-3">
                            <a asp-action="ViewDetails" asp-route-productId="@p.Id" class="btn btn-outline-primary">View Details</a>
                            <a asp-controller="ShoppingCart" asp-action="Add" asp-route-productId="@p.Id" class="btn btn-outline-secondary">Add To Cart</a>
                        </div>
                        <a class="card-link text-primary" asp-action="EditProduct" asp-route-productId="@p.Id">Edit</a>
                    }
                    else
                    {
                        <div class="w-100">
                            <a class="btn btn-secondary w-100" asp-action="EditProduct" asp-route-productId="@p.Id">Edit</a>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>
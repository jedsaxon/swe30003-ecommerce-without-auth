@model ViewProductDetailsViewModel

@{
    ViewBag.Title = Model.ProductName;
    Layout = "_Layout";
}

<div class="container py-5">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="GetAllProducts">Products</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.ProductName</li>
        </ol>
    </nav>

    <div class="row g-4">
        <!-- Product Image -->
        <div class="col-md-6">
            <div class="card border-0 shadow-sm">
                <img src="https://images.unsplash.com/photo-1498049794561-7780e7231661?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80" 
                     class="card-img-top" 
                     alt="@Model.ProductName"
                     style="height: 400px; object-fit: cover;">
            </div>
        </div>

        <!-- Product Details -->
        <div class="col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h1 class="display-5 fw-bold mb-3">@Model.ProductName</h1>
                    
                    <div class="mb-4">
                        <h2 class="text-primary fw-bold">$@Model.Price.ToString("F2")</h2>
                    </div>

                    <div class="mb-4">
                        <h5 class="fw-bold mb-2">Overview</h5>
                        <p class="text-muted">@Model.ProductShortDescription</p>
                    </div>

                    <div class="mb-4">
                        <h5 class="fw-bold mb-2">Description</h5>
                        <p class="text-muted">@Model.ProductLongDescription</p>
                    </div>

                    <div class="d-grid gap-2">
                        <a href="#" class="btn btn-primary btn-lg">
                            <i class="fas fa-shopping-cart me-2"></i>Add to Cart
                        </a>
                        <a href="#" class="btn btn-outline-primary btn-lg">
                            <i class="fas fa-bolt me-2"></i>Buy Now
                        </a>
                    </div>

                    <div class="mt-4">
                        <div class="d-flex align-items-center mb-2">
                            <i class="fas fa-truck text-muted me-2"></i>
                            <span class="text-muted">Free shipping on orders over $50</span>
                        </div>
                        <div class="d-flex align-items-center mb-2">
                            <i class="fas fa-undo text-muted me-2"></i>
                            <span class="text-muted">30-day return policy</span>
                        </div>
                        <div class="d-flex align-items-center">
                            <i class="fas fa-shield-alt text-muted me-2"></i>
                            <span class="text-muted">2-year warranty</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .breadcrumb {
        background-color: transparent;
        padding: 0;
    }
    
    .breadcrumb-item a {
        color: #6c757d;
        text-decoration: none;
    }
    
    .breadcrumb-item a:hover {
        color: #0d6efd;
    }
    
    .card {
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }
    
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.15)!important;
    }
</style>

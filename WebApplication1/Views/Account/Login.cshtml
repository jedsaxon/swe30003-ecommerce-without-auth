@model LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "_Layout";
}

<style scoped> 
    .alert > ul {
        margin: 0 !important;
    }
</style>

<div class="text-center mb-3">
    <h2>Login</h2>
</div>
<form method="post" asp-action="Login" class="m-auto" style="max-width: 20rem;">
    <div class="form-group mb-3">
        <label asp-for="EmailAddress" class="control-label"></label>
        <input asp-for="EmailAddress" class="form-control"/>
        <span asp-validation-for="EmailAddress" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Password" class="control-label"></label>
        <input asp-for="Password" type="password" class="form-control"/>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="w-100 btn-group mb-3">
        <input type="submit" value="Login" class="btn btn-primary">
    </div>
    <div class="mb-3">
        <a asp-action="CreateAccount" class="link-primary">I don't have an account</a>
    </div>
    <div class="alert alert-danger" asp-validation-summary="All"></div>
</form>